.container {
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.movable-view{
  display: flex;
  overflow: hidden;
  height: 100%;
}
.content{
  height: 100%;
  padding: 5px 15px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color:white;
  flex: none;
}
.delete{
  height: 100%;
  width: 80px;
  background-color: #e64340;
  color: white;
  font-size: 18px;
  display: flex;
  flex: none;
  align-items: center;
  justify-content: center;
}